    <div>
      <label>
        <input type="checkbox" name="keywords" value="Database Administrator"> Database Administrator
      </label>
    </div>
    <div>
      <label>
        <input type="checkbox" name="keywords" value="Graphic Designer"> Graphic Designer
      </label>
    </div>
    <div>
      <label>
        <input type="checkbox" name="keywords" value="Content Writer"> Content Writer
      </label>
    </div>
    <div>
      <label>
        <input type="checkbox" name="keywords" value="Sales Executive"> Sales Executive
      </label>
    </div>
    <div>
