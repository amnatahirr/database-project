<style>
  .container {
    padding: 10px;
  }

  .industry-container {
    margin-top: 20px;
  }
</style>

<div class="container mt-6">
  <h1 class="text-center mb-4">Admin Dashboard Stats</h1>

  <div class="row">
    <!-- Total Users -->
    <div class="col-md-4 mb-3">
      <div class="card text-white bg-primary">
        <div class="card-body text-center">
          <h5 class="card-title">Total Users</h5>
          <h2><%= totalUsers %></h2>
        </div>
      </div>
    </div>

    <!-- Total Jobs -->
    <div class="col-md-4 mb-3">
      <div class="card text-white bg-success">
        <div class="card-body text-center">
          <h5 class="card-title">Total Jobs</h5>
          <h2><%= totalJobs %></h2>
        </div>
      </div>
    </div>

    <!-- Total Applications -->
    <div class="col-md-4 mb-3">
      <div class="card text-white bg-warning">
        <div class="card-body text-center">
          <h5 class="card-title">Total Applications</h5>
          <h2><%= totalApplications %></h2>
        </div>
      </div>
    </div>

    <!-- Trending Job -->
    <div class="col-md-4 mb-3">
      <div class="card text-white bg-danger">
        <div class="card-body text-center">
          <h5 class="card-title">Trending Job</h5>
          <% if (mostAppliedJob) { %>
            <h3><%= mostAppliedJob.title %></h3>
          <% } else { %>
            <p>No applications yet.</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Trending Job -->
    <div class="col-md-4 mb-3">
      <div class="card text-white bg-secondary">
        <div class="card-body text-center">
          <h5 class="card-title">Trending Job Company</h5>
          <% if (mostAppliedJob) { %>
            <h3><%= mostAppliedJob.companyName %></h3>
          <% } else { %>
            <p>No applications yet.</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Applications Count for Most Applied Job -->
    <div class="col-md-4 mb-3">
      <div class="card text-white bg-info">
        <div class="card-body text-center">
          <h5 class="card-title">Trending Job Applications</h5>
          <% if (mostAppliedJob) { %>
            <h2><%= mostAppliedJob.count %></h2>
          <% } else { %>
            <p>No applications yet.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

 <!-- Job Count by Industry -->
<div class="row">
  <% const colors = ['bg-success','bg-warning','bg-primary', 'bg-info','bg-danger', 'bg-secondary']; %>
  <% jobsByIndustry.forEach((industry, index) => { %>
    <div class="col-md-4 mb-3">
      <div class="card text-white <%= colors[index % colors.length] %>">
        <div class="card-body text-center">
          <h5 class="card-title">Jobs in <%= industry._id %></h5>
          <h2><%= industry.count %></h2>
        </div>
      </div>
    </div>
  <% }); %>
</div>

</div>
